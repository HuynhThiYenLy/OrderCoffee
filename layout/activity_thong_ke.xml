<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ThongKeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/out"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/white"
            android:drawableBottom="@drawable/baseline_arrow_back_ios_24" />
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55dp"
            android:text="SALES STATISTICS"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="Thống kê doanh thu"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"

        android:background="@drawable/rounded_button_bg">

        <!-- Image on the Left -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp" />

        <!-- Three Lines of Text on the Right -->
        <TextView
            android:id="@+id/line1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:layout_alignParentTop="true"
            android:text="Doanh Thu Ngày"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/line2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:layout_below="@id/line1TextView"
            android:text="Số đơn hôm nay : 99 đơn"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/line3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:layout_below="@id/line2TextView"
            android:text="$9999"
            android:textStyle="bold"
            android:textColor="#25D482"
            android:textSize="19sp" />
    </RelativeLayout>
    <!-- Second Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/rounded_button_bg">

        <!-- Image on the Left -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/b"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp" />

        <!-- Three Lines of Text on the Right -->
        <TextView
            android:id="@+id/line1TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView2"
            android:layout_alignParentTop="true"
            android:text="Doanh Thu Tuần"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/line2TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView2"
            android:layout_below="@id/line1TextView2"
            android:text="100%"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/line3TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView2"
            android:layout_below="@id/line2TextView2"
            android:text="$9888"
            android:textStyle="bold"
            android:textColor="#25D482"
            android:textSize="19sp" />
    </RelativeLayout>
    <!-- First Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/rounded_button_bg">

        <!-- Image on the Left -->
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/c"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp" />

        <!-- Three Lines of Text on the Right -->
        <TextView
            android:id="@+id/line1TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView1"
            android:layout_alignParentTop="true"
            android:text="Doanh Thu Tháng"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/line2TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView1"
            android:layout_below="@id/line1TextView1"
            android:text="1001%"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/line3TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView1"
            android:layout_below="@id/line2TextView1"
            android:text="$1.2M"
            android:textStyle="bold"
            android:textColor="#25D482"
            android:textSize="19sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biểu đồ doanh thu"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingLeft="15dp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        app:srcCompat="@drawable/d" />
    <!--5 nút cuối-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/home_layout"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="-110dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_home_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:src="@drawable/baseline_doorbell_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:src="@drawable/baseline_qr_code_scanner_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:src="@drawable/baseline_history_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:src="@drawable/outline_shopping_cart_24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>









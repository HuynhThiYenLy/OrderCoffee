<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".AddSPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/white"
            android:drawableBottom="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:text="ADD PRODUCT"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tên sản phẩm"
        android:textSize="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/layout_net" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Giá sản phẩm"
        android:textSize="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/layout_net" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Mô tả sản phẩm"
        android:textSize="18dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/layout_net" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Phân loại sản phẩm"
        android:textColor="#023C6D"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:text="Đồ uống"
            android:textSize="17dp" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:text="Thức ăn"
            android:textSize="17dp" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Bánh ngọt"
            android:textSize="17dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Bánh mặn"
            android:textSize="17dp" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:text="Khác"
            android:textSize="17dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hình ảnh"
        android:textColor="#023C6D"
        android:textSize="22dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="#FFFFFF"
        android:drawableTop="@drawable/baseline_add_24"
        app:cornerRadius="10dp"
        app:strokeWidth="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:backgroundTint="#25D482"
            android:text="Thêm mới" />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:backgroundTint="#25D482"
            android:text="Sửa sản phẩm" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".ThanhToanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="15dp">

        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#F8F8FB"
            android:drawableBottom="@drawable/baseline_arrow_back_ios_24"
            app:cornerRadius="9dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="PAY FEE"
                android:textSize="22dp"
                android:textStyle="bold"
                android:fontFamily="@font/f"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="42dp"
                android:text="$999"
                android:textColor="#F08F5F"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:text="VAT (18%)"
            android:textColor="#B1B1B1"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="#25D482"
                android:drawableLeft="@drawable/baseline_credit_card_24"
                android:text="Credit Card"
                android:textSize="15dp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="#E2E2E6"
                android:drawableLeft="@drawable/bank_78392"
                android:text="Bank"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_coner"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Thẻ"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_radius"
                android:drawableLeft="@drawable/master_card_icon_133071"
                android:drawableRight="@drawable/carduse_card_payment_5122"
                android:hint="  0606 7022 8024 2342" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Tên Tài Khoản"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_radius"
                android:hint="Tên Tài Khoản" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="-5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày Hết Hạn"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_radius"
                        android:hint="06 / 2024" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CCV / CVC"
                        android:layout_marginTop="-5dp"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_radius"
                        android:hint="915" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B1B1B1"
            android:textSize="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:text="Chúng tôi sẽ gửi cho bạn chi tiết đơn hàng vào email của bạn sau khi thanh toán thành công."
            android:textAlignment="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:backgroundTint="#25D482"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:text="Thanh toán đơn hàng"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            app:cornerRadius="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/home_layout"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="-110dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_home_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:src="@drawable/baseline_doorbell_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:src="@drawable/baseline_qr_code_scanner_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:src="@drawable/baseline_history_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:src="@drawable/outline_shopping_cart_24" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>